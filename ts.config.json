{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true
    },
    "import/resolver": {
        "node": {
          "extensions": [".js",".ts"]
        }
      },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}